<h2>Add Stock Order</h2>
<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Symbol</label>
    <div class="col-sm-10">
      {{input type="text" value=model.symbol class="form-control" placeholder="GOOGL"}}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 control-label">Method</label>
    <div class="col-sm-10 btn-group" data-toggle="buttons">
      <label class="col-sm-6 btn btn-lg bg-primary active">
        Buy {{radio-button value='buy' checked=model.method}}
      </label>
      <label class="col-sm-6 btn btn-lg bg-primary">
        Sell {{radio-button value='sell' checked=model.method}}
      </label>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xs-2 control-label">Type</label>
    <div class="col-xs-10 btn-group" data-toggle="buttons">
      <label class="col-xs-3 btn btn-md bg-primary active">
        Market {{radio-button value='market' checked=model.type}}
      </label>
      <label class="col-xs-3 btn btn-md bg-primary">
        Limit {{radio-button value='limit' checked=model.type}}
      </label>
      <label class="col-xs-3 btn btn-md bg-primary">
        Stop Loss {{radio-button value='stop-loss' checked=model.type}}
      </label>
      <label class="col-xs-3 btn btn-md bg-primary">
        Stop Limit {{radio-button value='stop-limit' checked=model.type}}
      </label>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xs-2 control-label">Price</label>
    <div class="col-xs-10">
      <div class="input-group">
        <div class="input-group-addon">$</div>
        {{input type="text" value=model.price class="form-control" placeholder="650"}}
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xs-2 control-label">Quantity</label>
    <div class="col-xs-10">
      {{input type="text" value=model.quantity class="form-control" placeholder="20"}}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-xs-2 control-label">Date</label>
    <div class="col-xs-10">
      {{date-picker class="form-control" date=model.date valueFormat='YYYY-MM-DD' yearRange='1990,2016'}}
    </div>
  </div>
  <div class="form-group row">
    <button type="submit" class="btn btn-lg bg-accent btn-block" disabled= {{isDisabled}} {{action 'addStock' model}}>Add Stock</button>
  </div>
</form>
